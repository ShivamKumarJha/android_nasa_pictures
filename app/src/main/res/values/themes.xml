<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NASAGallery" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <!-- Splash -->
    <style name="Theme.NASAGallery.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.NASAGallery</item>
    </style>
</resources>