<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NASAPictures" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- AppBar -->
    <style name="Theme.NASA.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.NASA.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="titleTextAppearance">@android:style/TextAppearance.DeviceDefault.WindowTitle
        </item>
    </style>

    <!-- Text styles -->
    <style name="Theme.NASA.TextAppearance.Heading" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Theme.NASA.TextAppearance.Medium" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Theme.NASA.TextAppearance.Normal" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <!-- Dialog -->
    <style name="DialogWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialogue_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialogue_exit</item>
    </style>

    <style name="Theme.NASA.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@drawable/bg_round_corners_dialog</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:windowAnimationStyle">@style/DialogWindowAnimation</item>
    </style>
</resources>